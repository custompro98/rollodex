import daleEarnhardtJunior from "../images/dale-earnhardt-junior.webp";
import darrellCartrip from "../images/darrell-cartrip.webp";
import dj from "../images/dj.webp";
import docHudson from "../images/doc-hudson.webp";
import ferrari from "../images/ferrari.webp";
import fillmore from "../images/fillmore.webp";
import flo from "../images/flo.webp";
import frank from "../images/frank.webp";
import fred from "../images/fred.webp";
import guido from "../images/guido.webp";
import lightningMcQueen from "../images/lightning-mcqueen.webp";
import lizzie from "../images/lizzie.webp";
import luigi from "../images/luigi.webp";
import mack from "../images/mack.webp";
import marioAndretti from "../images/mario-andretti.webp";
import mater from "../images/mater.webp";
